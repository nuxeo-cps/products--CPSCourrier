<tal:comment replace="nothing"> $Id$ </tal:comment>
<form method="post"
      action="cpscourrier_batch_perform"
      tal:define="actions options/actions;
		  ">
  <table class="listing"
	 tal:define="columns options/columns;
		     rows options/rows;
		     ">
    <tr>
      <th tal:repeat="col columns">
	<tal:block content="col/label"
		   i18n:translate=""
		   tal:condition="col/is_i18n" />
      </th>
    </tr>
    <tr tal:repeat="row rows"
	  tal:attributes="class python:test(repeat['row'].odd(),
			  'odd', 'even')">
      <tal:block replace="structure row" />
    </tr>
  </table>

  <input type="submit"
	 class="context"
	 tal:repeat="action actions"
	 tal:attributes="value action/title;
			 name string:${action/id}"
	 i18n:attributes="value" />
</form>

