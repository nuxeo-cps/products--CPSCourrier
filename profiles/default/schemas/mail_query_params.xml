<?xml version="1.0"?>
<!-- specific fields for mail queries
should probably use only one schema. This will get clearer later
-->

<object name="mail_query_params" meta_type="CPS Schema">
  <field name="filter_review_state" meta_type="CPS String Field"/>
  <field name="filter_priority" meta_type="CPS String Field"/>
  <field name="filter_type" meta_type="CPS String Field"/>
  <field name="filter_sort_on" meta_type="CPS String Field">
    <property name="default_expr">string:created</property>
  </field>
  <field name="filter_sort_order" meta_type="CPS String Field">
    <property name="default_expr">string:reverse</property>
  </field>
  <field name="filter_sort_ref" meta_type="CPS String Field">
    <property name="default_expr">string:Date</property>
  </field>
  <field name="filter_path" meta_type="CPS String Field" />
  <field name="filter_Subject" meta_type="CPS String Field" />
  <field name="filter_fulltext" meta_type="CPS String Field" />
</object>

