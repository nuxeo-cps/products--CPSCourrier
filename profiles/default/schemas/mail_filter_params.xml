<?xml version="1.0"?>
<!-- specific fields for filtering in mail listings -->
<object name="mail_filter_params" meta_type="CPS Schema">
  <field name="filter_review_state" meta_type="CPS String Field"/>
  <field name="filter_priority" meta_type="CPS String Field"/>
  <field name="filter_type" meta_type="CPS String Field"/>
  <field name="filter_sort_on" meta_type="CPS String Field">
    <property name="default_expr">string:created</property>
  </field>
  <field name="filter_sort_order" meta_type="CPS String Field">
    <property name="default_expr">string:reverse</property>
  </field>
</object>

