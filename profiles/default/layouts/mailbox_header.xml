<?xml version="1.0"?>
<!-- read only header for the mailboxes -->
<object name="mailbox_header" meta_type="CPS Layout">
 <widget name="Addresses" meta_type="Lines Widget">
  <property name="fields">
   <element value="mailbox_addresses"/>
  </property>
  <property name="label">cpscourrier_mailbox_addresses_label</property>
  <property name="is_i18n">True</property>
  <property name="css_class">ddescription</property>
  <!-- Addresses are required on input. Hidden empty has one use-case:
  root of mail templates-->
  <property name="hidden_empty">True</property>
  <property name="hidden_layout_modes">
    <element value="create"/>
    <element value="edit"/>
  </property>
 </widget>
 <table>
  <row>
   <cell name="Addresses"/>
  </row>
 </table>
</object>
