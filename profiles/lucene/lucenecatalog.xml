<?xml version="1.0"?>
<object name="portal_catalog" meta_type="CPS Lucene Catalog Tool">

  <!-- Fields -->


  <field
      name="priority"
      attr="priority"
      type="Keyword"
      analyzer="standard"
      />

    <field
	name="mail_from"
	attr="mail_from"
	type="Keyword"
	analyzer="Standard"
      />

    <!-- fulltext version -->
    <field
	name="fulltext_mail_from"
	attr="mail_from"
	type="UnStored"
	analyzer="Standard"
      />


    <field
	name="mail_to"
	attr="mail_to"
	type="MultiKeyword"
	analyzer="Standard"
      />

    <!-- fulltext version -->
    <field
	name="fulltext_mail_to"
	attr="mail_to"
	type="UnStored"
	analyzer="Standard"
      />

    <field
	name="deadline"
	attr="deadline"
	type="Date"
	analyzer="Standard"
      />

    <field
	name="template_usage"
	attr="template_usage"
	type="Keyword"
	analyzer="Standard"
      />

    <field
	name="has_attachment"
	attr="has_attachment"
	type="Keyword"
	analyzer="Standard"
      />

    <!-- duplicate because two different filter widgets are going to
	 struggle for it -->
    <field
	name="review_state_dup"
	attr="review_state"
	type="Keyword"
	analyzer="Standard"
      />

    <!-- Dedicated fields for sorting -->

    <field
	name="Title_sort"
	attr="Title"
	type="Sort"
	analyzer="Sort"
	/>

    <field
	name="deadline_sort"
	attr="deadline"
	type="Sort"
	analyzer="Standard"
      />

  <!-- Brain's  Metadata -->

  <column value="has_attachment"/>
  <column value="priority"/>
  <column value="mail_from"/>
  <column value="mail_to"/>
  <column value="deadline"/>
  <column value="template_usage"/>

</object>
